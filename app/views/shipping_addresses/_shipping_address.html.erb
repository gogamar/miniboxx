<div id="<%= dom_id shipping_address %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= shipping_address.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Address first:</strong>
    <%= shipping_address.address_first %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Address second:</strong>
    <%= shipping_address.address_second %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Post code:</strong>
    <%= shipping_address.post_code %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">City:</strong>
    <%= shipping_address.city %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Region:</strong>
    <%= shipping_address.region %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Country:</strong>
    <%= shipping_address.country %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Phone number:</strong>
    <%= shipping_address.phone_number %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this shipping address", shipping_address, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this shipping address", edit_shipping_address_path(shipping_address), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
