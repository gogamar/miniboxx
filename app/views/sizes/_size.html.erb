<div id="<%= dom_id size %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= size.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Quantity:</strong>
    <%= size.quantity %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Variant:</strong>
    <%= size.variant_id %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this size", size, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this size", edit_size_path(size), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
