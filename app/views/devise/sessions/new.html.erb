<div class="flex min-h-full flex-col justify-center px-6 py-12 lg:px-8">
  <div class="sm:mx-auto sm:w-full sm:max-w-sm">
    <%= image_tag("logo.svg", class: "mx-auto h-10 w-auto", alt: "Miniboxx") %>
    <h2 class="mt-10 text-center text-2xl font-bold leading-9 tracking-tight text-gray-900"><%= t(".sign_in") %></h2>
    <%= render "devise/shared/links" %>
  </div>
  <div class="mt-10 sm:mx-auto sm:w-full sm:max-w-sm">
    <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <div class="mt-2">
        <%= f.label :email, class: "block text-sm font-medium leading-6 text-gray-900" %>
        <%= f.input :email, label: false, autofocus: true, required: true, input_html: { autocomplete: "email", class: "block w-full rounded-md border-0 py-1.5 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-sky-600 sm:text-sm sm:leading-6" } %>
      </div>
      <div class="mt-2">
        <%= f.label :password, class: "block text-sm font-medium leading-6 text-gray-900" %>
        <%= f.input :password, label: false, required: true, input_html: { autocomplete: "current-password", class: "block w-full rounded-md border-0 py-1.5 shadow-sm ring-1 ring-inset ring-gray-300 placeholder:text-gray-400 focus:ring-2 focus:ring-inset focus:ring-sky-600 sm:text-sm sm:leading-6" } %>
      </div>
      <% if devise_mapping.rememberable? %>
        <div class="flex items-center justify-between mt-2">
          <div class="flex items-center">
            <%= f.input :remember_me, as: :boolean, label: false, wrapper_html: { class: "block text-sm leading-6 text-gray-700" }, input_html: { class: "h-4 w-4 rounded border-gray-300 text-sky-600 focus:ring-sky-600" } %>
            <%= f.label :remember_me, class: "ml-3 block text-sm leading-6 text-gray-700" %>
          </div>
        </div>
      <% end %>
      <div class="mt-2">
        <%= f.button :submit, t(".sign_in"), class: "flex w-full justify-center rounded-md bg-sky-600 px-3 py-1.5 text-sm font-semibold leading-6 text-white shadow-sm hover:bg-sky-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-sky-600" %>
      <% end %>
    </div>
  </div>
</div>
