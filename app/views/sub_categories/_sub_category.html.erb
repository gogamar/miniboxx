<div id="<%= dom_id sub_category %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= sub_category.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Category:</strong>
    <%= sub_category.category_id %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this sub category", sub_category, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to "Edit this sub category", edit_sub_category_path(sub_category), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
