<%= form_with(model: shipping_address, class: "mt-10 border-t border-gray-200 pt-10") do |form| %>
  <h2 class="text-lg font-medium text-gray-900">Shipping information</h2>
  <div class="mt-4 grid grid-cols-1 gap-y-6 sm:grid-cols-2 sm:gap-x-4">
    <div class="sm:col-span-2">
      <%= form.label :name, class: "block text-sm font-medium text-gray-700" %>
      <div class="mt-1">
        <%= form.text_field :name, autocomplete: "given-name", class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
      </div>
    </div>
    <div class="sm:col-span-2">
      <%= form.label :address_first, class: "block text-sm font-medium text-gray-700" %>
      <div class="mt-1">
        <%= form.text_field :address_first, autocomplete: "street-address", class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
      </div>
    </div>
    <div class="sm:col-span-2">
      <%= form.label :address_second, class: "block text-sm font-medium text-gray-700" %>
      <div class="mt-1">
        <%= form.text_field :address_second, autocomplete: "address-line2", class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
      </div>
    </div>
    <div>
      <%= form.label :post_code, class: "block text-sm font-medium text-gray-700" %>
      <div class="mt-1">
        <%= form.text_field :post_code, autocomplete: "postal-code", class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
      </div>
    </div>
    <div>
      <%= form.label :city, class: "block text-sm font-medium text-gray-700" %>
      <div class="mt-1">
        <%= form.text_field :city, autocomplete: "address-level2", class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
      </div>
    </div>
    <div>
      <%= form.label :region, class: "block text-sm font-medium text-gray-700" %>
      <div class="mt-1">
        <%= form.text_field :region, autocomplete: "address-level1", class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
      </div>
    </div>
    <div>
      <%= form.label :country, class: "block text-sm font-medium text-gray-700" %>
      <div class="mt-1">
        <%= form.select :country, [["United States", "US"], ["Canada", "CA"], ["Mexico", "MX"]], {}, class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
      </div>
    </div>
    <div class="sm:col-span-2">
      <%= form.label :phone_number, class: "block text-sm font-medium text-gray-700" %>
      <div class="mt-1">
        <%= form.text_field :phone_number, autocomplete: "tel", class: "block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm" %>
      </div>
    </div>
  </div>
  <div class="mt-5 sm:mt-6 sm:grid sm:grid-flow-row-dense sm:grid-cols-2 sm:gap-3">
    <%= form.submit "Add Address", class: "inline-flex w-full justify-center rounded-md bg-indigo-600 px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600 sm:col-start-2" %>
    <button type="button" class="mt-3 inline-flex w-full justify-center rounded-md bg-white px-3 py-2 text-sm font-semibold text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50 sm:col-start-1 sm:mt-0" data-action="modal#close">Cancel</button>
  </div>
<% end %>
